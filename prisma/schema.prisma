datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
    ssl      = "require"
}

generator client {
    provider = "prisma-client-js"
}

model Product {
    id            Int      @id @default(autoincrement())
    slug          String   @unique
    name          String
    description   String
    itemsIncluded String[]
    imageUrl      String
    price         Float
    maxPerOrder   Int?
    hasWine       Boolean?
    hasMessage    Boolean?
}
